
val x1 = Val[Double]
val x2 = Val[Double]
val x3 = Val[Double]

val y = Val[Double]

val model = ScalaTask("""
  val a: Double = 7.0
  val b: Double = 0.1
  val y = sin(x1) + a * pow(sin(x2), 2) + b * pow(x3, 4) * sin(x1)
  """) set (
    inputs += (x1, x2, x3),
    outputs += y
  )      


SensitivitySaltelli(
  evaluation = model,
  sample = 1000,
  inputs = Seq(x1 in (-Pi, Pi), x2 in (-Pi, Pi), x3 in (-Pi, Pi)),
  outputs = Seq(y)
) hook (workDirectory / "Ishgami")