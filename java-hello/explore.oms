val i = Val[Int]
val o = Val[String]

//Defines the task to perform the hello function
val javaTask = ScalaTask("val o = hello.Hello.run(i)") set (
  libraries += workDirectory / "Hello.jar",
  inputs += i,
  outputs += o
)

DirectSampling(
  evaluation = javaTask,
  sampling = i in (0 to 10)
) hook display

